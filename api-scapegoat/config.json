{
  "name": "API Scapegoat",
  "version": "dev",
  "slug": "api-scapegoat",
  "description": "API gateway with failover for REST sensors.",
  "url": "https://github.com/shawly/hassio-api-scapegoat",
  "startup": "services",
  "ports": {
    "80/tcp": null
  },
  "ports_description": {
    "80/tcp": "Scapegoat API Port"
  },
  "arch": ["aarch64", "amd64", "armhf", "armv7", "i386"],
  "init": false,
  "map": ["config:rw", "ssl"],
  "boot": "auto",
  "hassio_api": true,
  "hassio_role": "default",
  "options": {
    "log_level": "info",
    "ssl": true,
    "certfile": "fullchain.pem",
    "keyfile": "privkey.pem",
    "apis": []
  },
  "schema": {
    "log_level": "list(trace|debug|info|notice|warning|error|fatal)",
    "certfile": "str",
    "keyfile": "str",
    "ssl": "bool",
    "apis": [
      {
        "host": "str",
        "port": "int(1,65535)",
        "failover_response_content_type": "str",
        "failover_response_body": "str",
        "failover_response_status_code": "int(100,599)"
      }
    ]
  }
}